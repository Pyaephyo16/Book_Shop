<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".DeleteBook">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/primary"
            android:gravity="top">
            <LinearLayout
                android:id="@+id/appBar"
                android:paddingHorizontal="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/back"
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:src="@drawable/back_white"
                    />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_weight="2"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/logo"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/l2"/>

                    <TextView
                        android:id="@+id/shop"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="BOOK SHELF"
                        android:textSize="22dp"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        />

                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:id="@+id/picture"
                android:layout_width="160dp"
                android:layout_height="220dp"
                android:scaleType="fitXY"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="16dp"
                android:src="@drawable/b"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/custom_card"
                android:layout_gravity="end"
                android:orientation="vertical">

                <!--        Id-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txtId"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Book Id "
                        android:textColor="@color/secondary"
                        android:paddingLeft="16dp"
                        android:layout_marginTop="22dp"
                        android:layout_weight="3"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/txtIdData"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="3"
                        android:layout_weight="2"
                        android:textColor="@color/primary"
                        android:layout_marginTop="22dp"
                        android:textSize="20dp"
                        />

                </LinearLayout>
                <!--        title-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txtTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Title "
                        android:textColor="@color/secondary"
                        android:paddingLeft="16dp"
                        android:layout_marginTop="22dp"
                        android:layout_weight="3"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/txtTitleData"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Ban Drown Angles and Demons"
                        android:layout_weight="2"
                        android:textColor="@color/primary"
                        android:layout_marginTop="22dp"
                        android:textSize="16dp"
                        />

                </LinearLayout>
                <!--        Author-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txtAuthor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Author "
                        android:textColor="@color/secondary"
                        android:paddingLeft="16dp"
                        android:layout_marginTop="22dp"
                        android:layout_weight="3"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/txtAuthorData"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Ban Drown"
                        android:layout_weight="2"
                        android:textColor="@color/primary"
                        android:layout_marginTop="22dp"
                        android:textSize="16dp"
                        />

                </LinearLayout>
                <!--        Pirce-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txtPrice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Price "
                        android:textColor="@color/secondary"
                        android:paddingLeft="16dp"
                        android:layout_marginTop="22dp"
                        android:layout_weight="3"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/txtPriceData"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="3600 MMK"
                        android:layout_weight="2"
                        android:textColor="@color/primary"
                        android:layout_marginTop="22dp"
                        android:textSize="16dp"
                        />

                </LinearLayout>
                <!--        Pages-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txtPages"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Pages "
                        android:textColor="@color/secondary"
                        android:paddingLeft="16dp"
                        android:layout_marginTop="22dp"
                        android:layout_weight="3"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/txtPagesData"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="448"
                        android:layout_weight="2"
                        android:textColor="@color/primary"
                        android:layout_marginTop="22dp"
                        android:textSize="16dp"
                        />

                </LinearLayout>
<!--                Stock-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txtStock"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Stock "
                        android:textColor="@color/secondary"
                        android:paddingLeft="16dp"
                        android:layout_marginTop="22dp"
                        android:layout_weight="3"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/txtStockData"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="48"
                        android:layout_weight="2"
                        android:textColor="@color/primary"
                        android:layout_marginTop="22dp"
                        android:textSize="16dp"
                        />

                </LinearLayout>
                <!--        Type-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txtType"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Type "
                        android:textColor="@color/secondary"
                        android:paddingLeft="16dp"
                        android:layout_marginTop="22dp"
                        android:layout_weight="3"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/txtTypeData"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="The stores to save the world"
                        android:layout_weight="2"
                        android:textColor="@color/primary"
                        android:layout_marginTop="22dp"
                        android:textSize="16dp"
                        />

                </LinearLayout>
                <!--        Description-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txtDescription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Description "
                        android:textColor="@color/secondary"
                        android:paddingLeft="16dp"
                        android:layout_marginTop="22dp"
                        android:layout_weight="3"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/txtDescriptionData"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Biology is the study of living things.A large variety of living things exists on the land, in the water and in the air."
                        android:layout_weight="2"
                        android:textColor="@color/primary"
                        android:layout_marginTop="22dp"
                        android:textSize="16dp"
                        />

                </LinearLayout>
                <Button
                    android:id="@+id/btnDelete"
                    android:layout_width="120dp"
                    android:layout_height="60dp"
                    android:text="Delete"
                    android:layout_marginTop="20dp"
                    android:layout_gravity="end"
                    android:layout_marginRight="16dp"
                    android:backgroundTint="@color/red"
                    android:textColor="@color/white"
                    android:textSize="16dp"
                    />
            </LinearLayout>

        </LinearLayout>

</ScrollView>