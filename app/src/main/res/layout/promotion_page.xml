<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PromotionPage">

    <LinearLayout
        android:id="@+id/appBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginHorizontal="16dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/back"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:src="@drawable/back"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="2"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/logo"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/l2"/>

            <TextView
                android:id="@+id/shop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BOOK SHELF"
                android:textSize="22dp"
                android:textColor="@color/secondary"
                android:textStyle="bold"
                />

        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Promotion"
        android:textAllCaps="true"
        android:textColor="@color/primary"
        android:textSize="22dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="16dp"
        />

 <LinearLayout
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:layout_marginHorizontal="16dp"
     android:orientation="horizontal">
     <EditText
         android:id="@+id/edtPromoName"
         android:layout_width="match_parent"
         android:background="@drawable/custom_textfield"
         android:layout_height="50dp"
         android:layout_weight="2"
         android:textColorHint="@color/black"
         android:textColor="@color/black"
         android:hint="Enter Promotion Name..."
         android:drawablePadding="6dp"
         android:drawableStart="@drawable/promotion"
         android:inputType="text"
         android:singleLine="true"
         android:paddingLeft="16dp" />
     <Button
         android:id="@+id/btnUpload"
         android:layout_width="120dp"
         android:layout_height="50dp"
         android:text="Upload"
         android:layout_marginLeft="16dp"
         android:backgroundTint="@color/primary"
         android:textColor="@color/white"
         android:textSize="16dp"
         />
 </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </androidx.recyclerview.widget.RecyclerView>

</LinearLayout>