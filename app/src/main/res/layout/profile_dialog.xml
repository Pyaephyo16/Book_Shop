<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingHorizontal="16dp"
    android:paddingVertical="4dp"
    android:background="@drawable/dialog_corner"
    android:orientation="vertical">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/l2"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BOOK SHELF"
                android:textSize="22dp"
                android:textColor="@color/secondary"
                android:textStyle="bold"
                />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginVertical="10dp"
            android:background="@android:color/black" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:elevation="12dp"
                app:cardCornerRadius="10dp"
                app:cardBackgroundColor="@color/transparent"
                android:layout_centerHorizontal="true"
                android:innerRadius="0dp"
                android:layout_gravity="center"
                android:layout_marginRight="8dp"
                android:shape="ring"
                android:thicknessRatio="0">
                <ImageView
                    android:id="@+id/dialogProfile"
                    android:scaleType="centerCrop"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/admin"
                    />
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/userName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    android:textSize="16dp"
                    android:textColor="@color/secondary"
                    android:textStyle="bold"
                    />
                <TextView
                    android:id="@+id/userEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="email"
                    android:textSize="14dp"
                    android:textColor="@color/primary"
                    />

            </LinearLayout>

            <TextView
                android:id="@+id/logout"
                android:layout_weight="2"
                android:textAlignment="textEnd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/logout"
                android:textSize="16dp"
                android:textColor="@color/red"
                android:textStyle="bold"
                />

        </LinearLayout>

        <EditText
            android:id="@+id/manageBtn"
            android:layout_marginTop="16dp"
            android:layout_marginHorizontal="20dp"
            android:layout_gravity="center"
            android:background="@drawable/custom_textfield"
            android:layout_width="220dp"
            android:layout_weight="3"
            android:hint="Manage Your Accont"
            android:focusable="false"
            android:clickable="true"
            android:gravity="center"
            android:layout_marginBottom="6dp"
            android:textColorHint="@color/black"
            android:layout_height="40dp" />


</LinearLayout>