<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Register">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <ImageView
            android:id="@+id/imgRegister"
            android:layout_width="match_parent"
            android:src="@drawable/i15"
            android:layout_height="270dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Register"
            android:textSize="30dp"
            android:textColor="@color/primary"
            android:textStyle="bold"
            android:textAllCaps="true"
            />

        <androidx.cardview.widget.CardView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:elevation="12dp"
            app:cardCornerRadius="80dp"
            app:cardBackgroundColor="@color/transparent"
            android:layout_centerHorizontal="true"
            android:innerRadius="0dp"
            android:layout_gravity="center"
            android:shape="ring"
            android:thicknessRatio="0">
        <ImageView
            android:id="@+id/profile"
            android:layout_gravity="center"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/rp6"
            />
        </androidx.cardview.widget.CardView>

        <EditText
            android:id="@+id/edtName"
            android:layout_width="match_parent"
            android:background="@drawable/custom_textfield"
            android:layout_height="50dp"
            android:layout_marginTop="40dp"
            android:textColorHint="@color/black"
            android:textColor="@color/black"
            android:hint="Enter Name..."
            android:drawablePadding="6dp"
            android:drawableStart="@drawable/person"
            android:inputType="text"
            android:singleLine="true"
            android:paddingLeft="16dp" />

        <EditText
            android:id="@+id/edtPhone"
            android:layout_width="match_parent"
            android:background="@drawable/custom_textfield"
            android:layout_height="50dp"
            android:layout_marginTop="40dp"
            android:textColorHint="@color/black"
            android:textColor="@color/black"
            android:hint="Enter Phone..."
            android:drawablePadding="6dp"
            android:drawableStart="@drawable/phone"
            android:inputType="phone"
            android:singleLine="true"
            android:paddingLeft="16dp" />

        <EditText
            android:id="@+id/edtEmail"
            android:layout_width="match_parent"
            android:background="@drawable/custom_textfield"
            android:layout_height="50dp"
            android:layout_marginTop="40dp"
            android:textColorHint="@color/black"
            android:textColor="@color/black"
            android:hint="Enter Email..."
            android:drawablePadding="6dp"
            android:drawableStart="@drawable/email"
            android:inputType="textEmailAddress"
            android:singleLine="true"
            android:paddingLeft="16dp" />

        <EditText
            android:id="@+id/edtPassword"
            android:layout_width="match_parent"
            android:background="@drawable/custom_textfield"
            android:layout_height="50dp"
            android:layout_marginTop="40dp"
            android:textColorHint="@color/black"
            android:textColor="@color/black"
            android:hint="Enter Password..."
            android:drawablePadding="6dp"
            android:drawableStart="@drawable/password"
            android:inputType="textPassword"
            android:singleLine="true"
            android:paddingLeft="16dp" />

        <CheckBox
            android:id="@+id/checkboxShowPswd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="Show Password"
            android:paddingHorizontal="16dp"
            android:textColor="@color/secondary"
            >
        </CheckBox>

        <EditText
            android:id="@+id/edtConfirmPassword"
            android:layout_width="match_parent"
            android:background="@drawable/custom_textfield"
            android:layout_height="50dp"
            android:textColorHint="@color/black"
            android:textColor="@color/black"
            android:hint="Enter Confirm Password..."
            android:drawablePadding="6dp"
            android:drawableStart="@drawable/cpassword"
            android:inputType="textPassword"
            android:singleLine="true"
            android:paddingLeft="16dp" />

        <CheckBox
            android:id="@+id/checkboxShowConfirmPswd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="Show Password"
            android:paddingHorizontal="16dp"
            android:textColor="@color/secondary"
            >
        </CheckBox>

        <Button
            android:id="@+id/btnRegister"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="REGISTER"
            android:backgroundTint="@color/primary"
            android:textColor="@color/white"
            android:layout_marginTop="18dp"
            android:textSize="16dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnBack"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_weight="3"
                android:text="BACK"
                android:backgroundTint="@color/transparentBlack"
                android:textColor="@color/white"
                android:layout_marginRight="4dp"
                android:textSize="16dp"
                />
            <Button
                android:id="@+id/btnLogin"
                android:layout_width="wrap_content"
                android:layout_weight="5"
                android:layout_height="60dp"
                android:text="LOGIN"
                android:layout_marginLeft="4dp"
                android:backgroundTint="@color/secondary"
                android:textColor="@color/white"
                android:textSize="16dp"
                />
        </LinearLayout>


    </LinearLayout>

</ScrollView>