<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="16dp"
    android:paddingVertical="4dp"
    android:orientation="vertical"
    android:background="@drawable/dialog_corner">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/l2"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BOOK SHELF"
            android:textSize="22dp"
            android:textColor="@color/secondary"
            android:textStyle="bold"
            />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginVertical="10dp"
        android:background="@android:color/black" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Promotion Start Date : "
            android:textColor="@color/secondary"
            android:paddingLeft="16dp"
            android:layout_weight="3"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/promoStartDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="3-8-2023"
            android:gravity="end"
            android:paddingRight="16dp"
            android:layout_weight="5"
            android:textColor="@color/primary"
            android:textSize="18dp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Promotion Book : "
            android:textColor="@color/secondary"
            android:paddingLeft="16dp"
            android:layout_weight="3"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/promoBook"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="3"
            android:gravity="end"
            android:paddingRight="16dp"
            android:layout_weight="6"
            android:textColor="@color/primary"
            android:textSize="18dp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:gravity="end"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/btnCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:textColor="@color/black"
            android:layout_marginRight="20dp"
            android:paddingLeft="16dp"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/btnEndPromo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="End Promotion"
            android:paddingRight="16dp"
            android:textColor="@color/red"
            android:textSize="18dp"
            />

    </LinearLayout>

</LinearLayout>